{
  "name": "core-platform-app-shell",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/core/platform/app-shell",
  "projectType": "application",
  "implicitDependencies": ["researchers-peers-rest-api-svc"],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/core/platform/app-shell",
        "outputPath": "dist/apps/core/platform/app-shell"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/core/platform/app-shell"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "core-platform-app-shell:build",
        "dev": true,
        "port": 4200
      },
      "configurations": {
        "development": {
          "buildTarget": "core-platform-app-shell:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "core-platform-app-shell:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "core-platform-app-shell:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/core/platform/app-shell/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/core/platform/app-shell/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "apps/core/platform/app-shell/cypress.config.ts",
        "testingType": "e2e",
        "devServerTarget": "core-platform-app-shell:serve"
      },
      "configurations": {
        "production": {
          "devServerTarget": "core-platform-app-shell:serve:production"
        }
      }
    }
  },
  "tags": []
}
