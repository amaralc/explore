{
  "name": "core-platform-iac-shell",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/core/platform/iac-shell",
  "projectType": "application",
  "implicitDependencies": ["researchers-peers-svc-rest-api", "core-platform-app-shell"],
  "targets": {
    "production:terraform:init": {
      "command": "cd apps/core/platform/iac-shell/production && terraform init"
    },
    "production:terraform:validate": {
      "command": "cd apps/core/platform/iac-shell/production && terraform validate"
    },
    "production:terraform:plan": {
      "command": "cd apps/core/platform/iac-shell/production && terraform plan -var-file=env.tfvars"
    },
    "production:terraform:apply": {
      "command": "cd apps/core/platform/iac-shell/production && terraform apply -var-file=env.tfvars -auto-approve"
    }
  },
  "tags": []
}
