{
  "name": "core-platform-iac-shell",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/core/platform/iac-shell",
  "projectType": "application",
  "implicitDependencies": ["researchers-peers-svc-rest-api", "core-platform-app-shell"],
  "targets": {
    "terraform:init": {
      "command": "cd apps/core/platform/iac-shell && terraform init"
    },
    "terraform:validate": {
      "command": "cd apps/core/platform/iac-shell && terraform validate"
    },
    "terraform:plan": {
      "command": "cd apps/core/platform/iac-shell && terraform plan -var-file=env.tfvars"
    },
    "terraform:apply": {
      "command": "cd apps/core/platform/iac-shell && terraform apply -var-file=env.tfvars -auto-approve"
    },
    "terraform:destroy": {
      "command": "cd apps/core/platform/iac-shell && terraform destroy -var-file=env.tfvars -auto-approve"
    }
  },
  "tags": []
}
