{
  "name": "core-platform-shell-iac",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/core/platform-shell-iac",
  "projectType": "application",
  "implicitDependencies": ["iac-modules-environment", "iac-modules-gcp-apis"],
  "targets": {
    "terraform:init": {
      "command": "cd apps/core/platform-shell-iac && terraform init"
    },
    "terraform:validate": {
      "command": "cd apps/core/platform-shell-iac && terraform validate"
    },
    "terraform:plan": {
      "command": "cd apps/core/platform-shell-iac && terraform plan -out=tfplan -var-file=env.tfvars"
    },
    "terraform:apply": {
      "command": "cd apps/core/platform-shell-iac && terraform apply -auto-approve tfplan && terraform output"
    },
    "terraform:destroy": {
      "command": "cd apps/core/platform-shell-iac && terraform destroy -var-file=env.tfvars -auto-approve"
    },
    "terraform:output": {
      "command": "cd apps/core/platform-shell-iac && terraform output"
    }
  },
  "tags": []
}
